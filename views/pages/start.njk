{% extends "layouts/form-journey.njk" %}

{% from "components/button/macro.njk" import govukButton %}

{% block casaPageTitle %}
  {{ t('start:pageTitle') }} - {{ t('common:serviceName') }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        {{ t('start:pageTitle') }}
      </h1>
      <h2 class="govuk-heading-m">
        {{ t('start:startApplication') }}
      </h2>
      <p class="govuk-body">
        {{ t('start:20minutes') | safe }}
      </p>

      {{ govukButton({
        text: t('start:startNow'),
        href: '#',
        isStartButton: true,
        attributes: {
          id: 'continue-button'
        }
      }) }}
    </div>
  </div>
{% endblock %}
