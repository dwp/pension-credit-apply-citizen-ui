{% extends "layouts/form-journey.njk" %}

{% from "components/button/macro.njk" import govukButton %}

{% block casaPageTitle %}
  {{ t('start:pageTitle') }} - {{ t('common:serviceName') }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        {{ t('start:heading') }}
      </h1>
      <p class="govuk-body-l">
        {{ t('start:applyOnline') }}
      </p>
      <p class="govuk-body-l govuk-!-font-weight-bold govuk-!-margin-bottom-2">
        {{ t('start:weWillUseInformation') }}
      </p>
      <ul class="govuk-list govuk-list--bullet">
        <li>{{ t('start:thatWeAlreadyHave') }}</li>
        <li>{{ t('start:thatWeGetFromHMRC') }}</li>
      </ul>
      <p class="govuk-body-m">
        {{ t('start:completeInOneGo') }}
      </p>
      <p class="govuk-body-m govuk-!-margin-bottom-7">
        {{ t('start:informationSecure', sessionMinutes) }}
      </p>

      {{ govukButton({
        text: t('start:startNow'),
        href: skipTo,
        isStartButton: true,
        attributes: {
          id: 'continue-button'
        }
      }) }}
    </div>
  </div>
{% endblock %}
