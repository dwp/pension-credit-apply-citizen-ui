{% extends "layouts/form-journey.njk" %}

{% from "casa/components/input/macro.njk" import casaGovukInput with context %}
{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}
{% from "casa/components/textarea/macro.njk" import casaGovukTextarea with context %}

{% block casaPageTitle %}
  {{ t("your-name:pageTitle") }} - {{ t("common:serviceName") }}
{% endblock %}

{% block journey_form %}
  <h1 class="govuk-heading-xl">
    {{ t("your-name:pageTitle") }}
  </h1>

  {{ casaGovukInput({
    name: "fullName",
    classes: "govuk-input--width-20",
    label: {
      text: t("your-name:field.fullName.label"),
      classes: "govuk-label--m"
    },
    hint: {
      text: t("your-name:field.fullName.hint")
    },
    value: formData.fullName,
    casaErrors: formErrors
  }) }}

  {% set previousNames %}
    {{ casaGovukTextarea({
      name: "previousNames",
      classes: "govuk-input--width-20",
      label: {
        text: t("your-name:field.previousNames.label"),
        classes: "govuk-label--m"
      },
      value: formData.previousNames,
      casaErrors: formErrors
    }) }}
  {% endset %}

  {{ casaGovukRadios({
    name: "hasPreviousNames",
    fieldset: {
      legend: {
        text: t("your-name:field.hasPreviousNames.legend"),
        classes: "govuk-fieldset__legend--m"
      }
    },
    hint: {
      text: t("your-name:field.hasPreviousNames.hint")
    },
    items: [{
      value: "yes",
      text: t("your-name:field.hasPreviousNames.options.yes"),
      conditional: {
        html: previousNames
      }
    }, {
      value: "no",
      text: t("your-name:field.hasPreviousNames.options.no")
    }],
    casaWithAnalytics: true,
    casaValue: formData.hasPreviousNames,
    casaErrors: formErrors
  }) }}
{% endblock %}
