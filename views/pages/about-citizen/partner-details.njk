{% extends "layouts/form-journey.njk" %}

{% from "casa/components/input/macro.njk" import casaGovukInput with context %}
{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}
{% from "casa/components/character-count/macro.njk" import casaGovukCharacterCount with context %}

{% block casaPageTitle %}
  {{ t("partner-details:pageTitle") }} - {{ t("common:serviceName") }}
{% endblock %}

{% block journey_form %}
  <h1 class="govuk-heading-xl">
    {{ t("partner-details:pageTitle") }}
  </h1>

  {{ casaGovukInput({
    name: "partnerFullName",
    classes: "govuk-input--width-20",
    label: {
      text: t("partner-details:field.partnerFullName.label"),
      classes: "govuk-label--m"
    },
    hint: {
      text: t("partner-details:field.partnerFullName.hint")
    },
    value: formData.partnerFullName,
    casaErrors: formErrors
  }) }}

  {% set partnerPreviousNames %}
    {{ casaGovukCharacterCount({
      name: "partnerPreviousNames",
      maxlength: 500,
      label: {
        text: t("partner-details:field.partnerPreviousNames.label"),
        classes: "govuk-label--m"
      },
      value: formData.partnerPreviousNames,
      casaErrors: formErrors
    }) }}
  {% endset %}

  {{ casaGovukRadios({
    name: "partnerHasPreviousNames",
    fieldset: {
      legend: {
        text: t("partner-details:field.partnerHasPreviousNames.legend"),
        classes: "govuk-fieldset__legend--m"
      }
    },
    hint: {
      text: t("partner-details:field.partnerHasPreviousNames.hint")
    },
    items: [{
      value: "yes",
      text: t("partner-details:field.partnerHasPreviousNames.options.yes"),
      conditional: {
        html: partnerPreviousNames
      }
    }, {
      value: "no",
      text: t("partner-details:field.partnerHasPreviousNames.options.no")
    }],
    casaWithAnalytics: true,
    casaValue: formData.partnerHasPreviousNames,
    casaErrors: formErrors
  }) }}

  {{ casaGovukInput({
    name: "partnerNino",
    classes: "govuk-input--width-10",
    label: {
      text: t("partner-details:field.partnerNino.label"),
      classes: "govuk-label--m"
    },
    hint: {
      text: t("partner-details:field.partnerNino.hint")
    },
    value: formData.partnerNino,
    casaErrors: formErrors
  }) }}

  {{ casaGovukRadios({
    name: "partnerRegisteredBlind",
    fieldset: {
      legend: {
        text: t("partner-details:field.partnerRegisteredBlind.legend"),
        classes: "govuk-fieldset__legend--m"
      }
    },
    items: [{
      value: "yes",
      text: t("partner-details:field.partnerRegisteredBlind.options.yes")
    }, {
      value: "no",
      text: t("partner-details:field.partnerRegisteredBlind.options.no")
    }],
    casaWithAnalytics: true,
    casaValue: formData.partnerRegisteredBlind,
    casaErrors: formErrors
  }) }}
{% endblock %}
