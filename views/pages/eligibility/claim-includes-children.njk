{% extends "layouts/form-journey.njk" %}

{% block casaPageTitle %}
  {{ t("claim-includes-children:pageTitle") }} - {{ t("common:serviceName") }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        {{ t("claim-includes-children:pageTitle") }}
      </h1>
      <p class="govuk-body-l">
        {{ t("claim-includes-children:weNeedYouToCall") | safe }}
      </p>
      <h2 class="govuk-heading-m">
        {{ t("claim-includes-children:pcClaimLine") }}
      </h2>

      {% if isNorthernIrelandClaim %}
        <dl class="govuk-list contact-numbers">
          <div>
            <dt>{{ t("common:telephone") }}</dt>
            <dd>{{ t("common:northernIreland.telephoneNumber") }}</dd>
          </div>
          <div>
            <dt>{{ t("common:textphone") }}</dt>
            <dd>{{ t("common:northernIreland.textphoneNumber") }}</dd>
          </div>
        </dl>
        <p class="govuk-body">
          {{ t("common:northernIreland.callTimes") | safe }}
        </p>
      {% else %}
        <dl class="govuk-list contact-numbers">
          <div>
            <dt>{{ t("common:telephone") }}</dt>
            <dd>{{ t("common:telephoneNumber") }}</dd>
          </div>
          <div>
            <dt>{{ t("common:textphone") }}</dt>
            <dd>{{ t("common:textphoneNumber") }}</dd>
          </div>
        </dl>
        <p class="govuk-body">
          {{ t("common:callTimes") | safe }}
        </p>
      {% endif %}

      <h2 class="govuk-heading-m">
        {{ t("common:helpUsImprove") }}
      </h2>
      <p class="govuk-body">
        <a class="govuk-link" href="{{ feedbackSurveyUrl }}" target="_blank">
          {{ t("common:takeSurvey") }}
        </a>
      </p>
    </div>
  </div>
{% endblock %}
