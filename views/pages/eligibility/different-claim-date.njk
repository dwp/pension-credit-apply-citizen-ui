{% extends "layouts/form-journey.njk" %}

{% from "casa/components/date-input/macro.njk" import casaGovukDateInput with context %}

{% block casaPageTitle %}
  {{ t("different-claim-date:pageTitle") }} - {{ t("common:serviceName") }}
{% endblock %}

{% block journey_form %}
  {{ casaGovukDateInput({
    namePrefix: "differentClaimDate",
    fieldset: {
      legend: {
        text: t("different-claim-date:pageTitle"),
        isPageHeading: true,
        classes: "govuk-fieldset__legend--xl"
      }
    },
    hint: {
      text: t("different-claim-date:field.differentClaimDate.hint")
    },
    casaErrors: formErrors,
    casaValue: formData.differentClaimDate
  }) }}
{% endblock %}
