{% extends "layouts/form-journey.njk" %}

{% block casaPageTitle %}
  {{ t("state-pension-not-claimed:pageTitle") }} - {{ t("common:serviceName") }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        {{ t("state-pension-not-claimed:pageTitle") }}
      </h1>

      <p class="govuk-body-l">
        {{ t("state-pension-not-claimed:" + northernIrelandPrefix + "youShouldClaimYourStatePension") | safe }}
      </p>

      <h2 class="govuk-heading-m">
        {{ t("state-pension-not-claimed:" + northernIrelandPrefix + "notEntitledToStatePension") }}
      </h2>

      <dl class="govuk-list contact-numbers">
        <div>
          <dt>{{ t("common:telephone") }}</dt>
          <dd>{{ t("common:" + northernIrelandPrefix + "telephoneNumber") }}</dd>
        </div>
        <div>
          <dt>{{ t("common:textphone") }}</dt>
          <dd>{{ t("common:" + northernIrelandPrefix + "textphoneNumber") }}</dd>
        </div>
      </dl>
      <p class="govuk-body">
        {{ t("common:" + northernIrelandPrefix + "callTimes") | safe }}
      </p>

      <h2 class="govuk-heading-m">
        {{ t("common:helpUsImprove") }}
      </h2>
      <p class="govuk-body">
        <a class="govuk-link" href="{{ feedbackSurveyUrl }}">
          {{ t("common:takeSurvey") }}
        </a>
      </p>
    </div>
  </div>
{% endblock %}
