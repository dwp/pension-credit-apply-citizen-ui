{% extends "layouts/form-journey.njk" %}

{% block casaPageTitle %}
  {{ t("state-pension-not-claimed:pageTitle") }} - {{ t("common:serviceName") }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        {{ t("state-pension-not-claimed:pageTitle") }}
      </h1>
      <p class="govuk-body-l">
        {{ t("state-pension-not-claimed:youShouldClaimYourStatePension") | safe }}
      </p>
      <h2 class="govuk-heading-m">
        {{ t("state-pension-not-claimed:notEntitledToStatePension") }}
      </h2>
      <p class="govuk-body">
        {{ t("state-pension-not-claimed:callTimes") | safe }}
      </p>
      <dl class="govuk-list contact-numbers">
        <div>
          <dt>{{ t("state-pension-not-claimed:telephone") }}</dt>
          <dd>{{ t("state-pension-not-claimed:telephoneNumber") }}</dd>
        </div>
        <div>
          <dt>{{ t("state-pension-not-claimed:textphone") }}</dt>
          <dd>{{ t("state-pension-not-claimed:textphoneNumber") }}</dd>
        </div>
      </dl>
      <h2 class="govuk-heading-m">
        {{ t("state-pension-not-claimed:helpUsImprove") }}
      </h2>
      <p class="govuk-body">
        <a class="govuk-link" href="https://getinvolved.dwp.gov.uk/digital/764a559b/" target="_blank">
          {{ t("state-pension-not-claimed:takeSurvey") }}
        </a>
      </p>
    </div>
  </div>
{% endblock %}
