{% extends "layouts/main.njk" %}

{% from "components/panel/macro.njk" import govukPanel %}
{% from "components/button/macro.njk" import govukButton %}

{% block casaPageTitle %}
  {{ t("what-happens-next:pageTitle") }} - {{ t("common:serviceName") }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukPanel({
        titleText: t("what-happens-next:panelTitle"),
        text: t("what-happens-next:panelBody")
      }) }}

      {# What happens next #}
      <h2 class="govuk-heading-l govuk-!-margin-top-8">
        {{ t("what-happens-next:section.whatHappensNext.heading") }}
      </h2>

      {# Callback reasons #}
      {% if abroadMoreThanOnceOrForMedical or ownsAdditionalProperty or selfEmployed or hasBonds %}
        <p class="govuk-body">
          {{ t("what-happens-next:section.whatHappensNext.leadParaCallbacksHtml", contactDate) | safe }}
        </p>
        <ul class="govuk-list govuk-list--bullet">
          {% if abroadMoreThanOnceOrForMedical %}
            <li>{{ t("what-happens-next:section.whatHappensNext.callbackReasons.abroad") }}</li>
          {% endif %}
          {% if ownsAdditionalProperty %}
            <li>{{ t("what-happens-next:section.whatHappensNext.callbackReasons.property") }}</li>
          {% endif %}
          {% if selfEmployed %}
            <li>{{ t("what-happens-next:section.whatHappensNext.callbackReasons.selfEmployment") }}</li>
          {% endif %}
          {% if hasBonds %}
            <li>{{ t("what-happens-next:section.whatHappensNext.callbackReasons.bonds") }}</li>
          {% endif %}
        </ul>
      {% else %}
        <p class="govuk-body">
          {{ t("what-happens-next:section.whatHappensNext.leadParaDefaultHtml", contactDate) | safe }}
        </p>
      {% endif %}

      <p class="govuk-body pc-print-button-section">
        {{ govukButton({
          classes: "govuk-button--secondary",
          element: "button",
          text: t("what-happens-next:print.buttonLabel"),
          attributes: {
            "data-pc-module": "pc-print-button"
          }
        }) }}
      </p>


      <h3 class="govuk-heading-m">{{ t('what-happens-next:section.whatHappensNext.subHeadingSuccess') }}</h3>
      <p class="govuk-body">
        {{ t('what-happens-next:section.whatHappensNext.paraSuccess') }}
      </p>

      <h3 class="govuk-heading-m">{{ t('what-happens-next:section.whatHappensNext.subHeadingChanges') }}</h3>
      <p class="govuk-body">
        {{ t('what-happens-next:' + northernIrelandPrefix + 'section.whatHappensNext.paraChangesHtml') | safe }}
      </p>


      {# Housing Benefit #}
      <h2 class="govuk-heading-l">{{ t('what-happens-next:section.housingBenefit.heading') }}</h2>
      <p class="govuk-body">
        {{ t('what-happens-next:section.housingBenefit.para') }}
      </p>


      {# Council Tax Reduction #}
      <h2 class="govuk-heading-l">{{ t('what-happens-next:' + northernIrelandPrefix + 'section.councilTaxReduction.heading') }}</h2>
      <p class="govuk-body">
        {{ t('what-happens-next:' + northernIrelandPrefix + 'section.councilTaxReduction.para') }}
      </p>


      {# Carerâ€™s Allowance #}
      <h2 class="govuk-heading-l">{{ t('what-happens-next:section.carersAllowance.heading') }}</h2>
      <p class="govuk-body">
        {{ t('what-happens-next:' + northernIrelandPrefix + 'section.carersAllowance.paraHtml') | safe }}
      </p>


      {# Survey #}
      <h3 class="govuk-heading-m">{{ t('common:helpUsImprove') }}</h3>
      <p class="govuk-body">
        <a href="{{ feedbackSurveyUrl }}" class="govuk-link">{{ t('common:takeSurvey') }}</a>
      </p>
    </div>
  </div>
{% endblock %}
