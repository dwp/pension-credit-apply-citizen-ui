{% extends "layouts/main.njk" %}

{% block casaPageTitle %}
  {{ t('404:pageTitle') }} - {{ t('common:serviceName') }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        {{ t('404:pageTitle') }}
      </h1>

      <p class="govuk-body">
        {{ t('404:typedAddress') }}
      </p>

      <p class="govuk-body">
        {{ t('404:pastedAddress') }}
      </p>

      <p class="govuk-body">
        {{ t('404:selectedLinkHtml') | safe }}
      </p>
    </div>
  </div>
{% endblock %}
