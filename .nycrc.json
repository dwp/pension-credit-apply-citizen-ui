{
  "report-dir": ".coverage",
  "all": true,
  "check-coverage": true,
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 80,
  "reporter": [
    "cobertura",
    "lcov",
    "text"
  ],
  "include": [
    "definitions/field-gather-modifiers/**/*",
    "definitions/field-validators/**/*",
    "definitions/hooks/**/*",
    "definitions/route-conditions/**/*",
    "lib/**/*",
    "middleware/**/*",
    "routes/**/*",
    "utils/**/*"
  ],
  "exclude": [
    "routes/actuator/index.js",
    "tools/**/*"
  ]
}
